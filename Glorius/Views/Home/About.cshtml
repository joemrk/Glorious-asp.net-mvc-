
@{
    ViewBag.Title = "Glorious | О нас";

}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
</head>
<body>
    <div class="container min-h">
        <div class="counter box-shadow">
            <br />
            <h2>В нашем магазине</h2>
            @*<h2>Счетчики крутости, или чсв, или самоутверждения:</h2>*@
            <p>Товаров: @ViewBag.ProductCounter</p>
            <p>Заказов: @ViewBag.OrderCounter</p>

